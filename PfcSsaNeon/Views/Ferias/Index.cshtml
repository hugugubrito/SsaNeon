@model IEnumerable<PfcSsaNeon.Models.Ferias>

@{
    ViewBag.Title = "Index";
}


<div class="navbar-default " style="background-color:#384892">
    @using (Html.BeginForm("Index", "Home"))
    {
        <button name="button" value="ActionOne" class="button" style="background-color:#384892; border:0;">
            <img src="~/Content/Imgs/logo.png" />
        </button>
    }
</div>
<div id="Teladedados">
    <div class="tabeladedados" style="margin-left: 100px;margin-right: 100px; overflow:scroll;background-color:lightgrey">
        <p>
            @Html.ActionLink("Cadastrar Ferias", "Create" + "/" + (int)ViewBag.Fid, "Ferias")
        </p>
        <table class="table" style="background-color:white">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Funcionarios.Nome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.InicioFerias)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Dias)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Funcionarios.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.InicioFerias)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Dias)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.FeriasId }) |
                        @Html.ActionLink("Details", "Details", new { id = item.FeriasId }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.FeriasId })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>